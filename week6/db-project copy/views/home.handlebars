<h3>Add an exercise</h3>
<form class="col-sm-12">

    <div class="form-group col-sm-6 no-pad">
        <label for="form-date">Date</label>
        <input type="date" class="form-control" id="form-date" placeholder="MM-DD-YYYY">
    </div>

    <div class="col-lg-12 no-pad">
        <div class="form-group col-lg-6 no-pad">
            <label for="form-exercise-name">Exercise name</label>
            <input type="text" class="form-control" id="form-exercise-name" placeholder="Deadlifts, squats, jumping jacks, lunges, etc.">
        </div>
    </div>

    <div class="form-group col-sm-3 no-pad">
        <label for="form-reps">Repetitions</label>
        <input type="number" class="form-control" id="form-reps" placeholder="2, 5, 10, etc.">
    </div>

    <div class="form-group col-sm-3 no-pad">
        <label for="form-weight">Weight</label>
        <input type="number" class="form-control" id="form-weight" placeholder="5, 35, 100, etc.">
    </div>

    <div class="form-group col-lg-12 no-pad">
        <label for="">Units</label>
        <div class="radio">
            <label for="form-option-lbs">
                <input type="radio" name="unitsRadios" id="form-option-lbs" value="lbs" checked>
                Lbs. (pounds)
            </label>
        </div>

        <div class="radio">
            <label>
                <input type="radio" name="unitsRadios" id="form-option-kg" value="kg">
                Kg. (Kilograms)
            </label>
        </div>
    </div>

    <div class="col-sm-12 no-pad">
        <button type="submit" class="btn btn-default">Add exercise</button>
    </div>
</form>


<h3>Completed exercises</h3>

<table class="table">
<!-- for each exercise -->
<thead>
    <th>Name</th>
    <th>Reps</th>
    <th>Weight</th>
    <th>Date</th>
    <th>Unit</th>
</thead>
<tbody class="table-bordered">
    <tr>
        <td>Data</td>
        <td>Data</td>
        <td>Data</td>
        <td>Data</td>
        <td>Data</td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></td>
        <td><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></td>
    </tr>
</tbody>

</table>
